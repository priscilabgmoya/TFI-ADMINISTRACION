@page
@model Vista.Pages.Login.IniciarSesionModel
@{
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<link rel="stylesheet" href="~/css/iniciarSesion.css" />


<div class="container  containerLogin">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm12 col-md-12 col-lg-6">

            <div class="mt-3" style="text-align:center;">
                <div class="containerImg">
                    <img src="~/assets/logo-1.png" alt="logoImg" />
                </div>

            </div>

            <form method="post" class="mt-3">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group row">
                    <div class="col-9">
                        <input type="text" asp-for="Usuario.NombreDeUsuario" class="form-control" placeholder="Nombre usuario" />
                    </div>
                    <span class="text-danger" asp-validation-for="Usuario.NombreDeUsuario"></span>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-9">
                        <input type="password" asp-for="Usuario.Contrasena" class="form-control" placeholder="Contraseña" />
                    </div>
                    <span class="text-danger" asp-validation-for="Usuario.Contrasena"></span>
                </div>

                <div class="mt-4" style="text-align:center;">
                    <button type="submit" class="btnInicioSesion">Iniciar sesión</button>
                </div>
            </form>

        </div>
    </div>
</div>
