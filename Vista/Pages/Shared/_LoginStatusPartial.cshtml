@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Login/CerrarSesion">
        <span class="text-nav">
            Bienvenido:
        </span>
        <br />
        <span class="text-nav">
        @User.Identity.Name
        </span>
        <br />
        <button type="submit" class="btnLogOut"><i class="fas fa-arrow-circle-left iconLogOut"></i> <br /> <span class="text-nav">Salir</span> </button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Login/IniciarSesion"> <i class="fas fa-solid fa-arrow-right iconLogOut"></i> <br /> <span class="text-nav">Iniciar Sesion</span> </a>
}